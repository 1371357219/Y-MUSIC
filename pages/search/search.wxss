/* pages/search/search.wxss */
.searchContainer{
    position: relative;
    padding: 20rpx;
}
.searchHeader{
    position: relative;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}
.searchHeader>input{
    height: 60rpx;
    padding-left: 20rpx;
    flex: 1;
    background-color: #FBFBFB;
    margin-right: 20rpx;
}
.searchHeader .clearInput{
    position: absolute;
    right: 80rpx;
    z-index: 2;
}
.history{
    position: relative;
    margin-top: 40rpx;
    font-size: 30rpx;
}
.history .icon-shanchu{
    position: absolute;
    right: 0;
    top: 10rpx;
}
.history .content{
    padding: 20rpx;
    display: flex;
    flex-wrap: wrap;
}
.history .content .item{
    background-color: #FBFBFB;
    border-radius: 4rpx;
    padding: 10rpx 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.hotSearch{
    margin-top: 40rpx;
}
.hotSearch .content{
    display: flex;
    flex-wrap: wrap;
}
.hotSearch .content .item{
    display: flex;
    align-items: center;
    width: 49%;
    margin-top: 40rpx;
}
.hotSearch .content .item .index{
    height: 60rpx;
    flex: 0 0 60rpx;
    width: 60rpx;
    color: #D43B33;
    text-align: center;
    line-height: 50rpx;
    font-weight: 600;
}
.hotSearch .content .item .itemContent{
    margin-left: 10rpx;
}
.hotSearch .content .item .itemContent .title{
    font-size: 26rpx;
}
.hotSearch .content .item .itemContent .detail{
    font-size: 20rpx;
    margin-top: 10rpx;
    color: #9A9A9A;
}



.maskContainer{
    position: absolute;
    top: 80rpx;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: white;
    z-index: 100;
}
.maskContainer .header{
    margin: 0rpx 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 22rpx;
    font-weight: 500;
    color:#B1B1E8;
    border-bottom: 1rpx solid #B1B1E8;
}
.maskContainer .content .item{
    display: flex;
    align-items: center;
    height: 70rpx;
    padding: 0 10rpx;
    line-height: 70rpx;
}
.maskContainer .content .item .iconfont{
    margin-right:16rpx;
}
.maskContainer .content .item .detail{
    font-size: 26rpx;
    flex: 1;
    border-bottom: 1rpx solid rgba(0, 0, 0, .2);
}