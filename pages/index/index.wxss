/* pages/index/index.wxss */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 五个图标导航区域 */
.navContainer{
  display:flex;
  
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin:20rpx 0;
}
/* 推荐歌曲区域 */

.recommendContainer{
  padding: 20rpx;
}
.recommendContainer .header .title{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.moreContainer{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.moreContainer .more{
 border: 1px solid #333;
 font-size: 24rpx;
 padding: 10rpx 20rpx;
 border-radius: 24rpx; 
}
/* 推荐内容区 */
.recommendScroll{
  display: flex;
  margin-top: 10rpx;
  flex-wrap: nowrap;
  height: 300rpx;
}
.scrollItem{
  flex: 1;
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单文本移除隐藏 省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜区域 */

.topListSwiper{
  height: 400rpx;

}
.topList{
  padding: 20rpx;
}

.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;

}
.musicItem{
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
}

.musicItem .count{
  
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}


