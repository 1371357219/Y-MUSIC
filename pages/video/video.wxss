/* pages/video/video.wxss */

.video-header {
    display: flex;
    padding: 10rpx;

}

.video-header>view {
    color: #898B8A;
    text-align: center;
    line-height: 60rpx;
    margin: 0 20rpx;
    flex: 1;
    border-bottom: 1px solid #eee;
}

.video-header>image {
    width: 60rpx;
    height: 60rpx;
}

.navScroll {
    display: flex;
    white-space: nowrap;
    height: 70rpx;
}

.navScroll .navItem {
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.navScroll .navItem .active {
    border-bottom: 1px solid #D43B33;
}

.videoScroll {
    height: calc(100vh - 70rpx - 82rpx)
}

.video_view {}


.video_view .common_video{
    width: 100%;
    height: 360rpx;
    margin-top: 20rpx;
    border-radius: 15rpx;
}

.video_view .title {
    font-size: 30rpx;
    line-height: 80rpx;
    /*设置单行文本的固定写法 */
    /* 设置固定的宽度 */
    width: 600rpx;
    /* 设置文本不换行 */
    white-space: nowrap;
    /* 设置多余文本以省略号的形式出现 */
    text-overflow: ellipsis;
    /* 裁剪多余的内容 */
    overflow: hidden;


}

.video_view .bottom_content {
    border-top: 1px solid rgba(0,0,0,.1);
    display: flex;
    align-items: center;
    height: 70rpx;
    justify-content: space-between;
}

.bottom_content .left_content {
    display: flex;
    align-items: center;
}

.bottom_content .left_content image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.bottom_content .right_content{
    display: flex;
    
}
.bottom_content .right_content>view,
.bottom_content .right_content>button{
    position:relative;
    width: 80rpx;
    height: 70rpx;
}
.bottom_content .right_content>view .iconfont{
    font-size: 46rpx;
   
    line-height: 70rpx;
}
.bottom_content .right_content>view>text:nth-child(2){
    font-size: 20rpx;
    position: absolute;
    top: 0;
    left:40rpx;
}